{% extends 'templates/layout.twig' %}
{% block title %}Swipez.{% endblock %}
{% block content %}
    <header class="header" id="header">
        <div class="navigation" id="navigation">
            <div class="navigation-logo">
                <img class="logo" src="{{ baseUrl }}/design/images/logo.png">
            </div>
            <nav class="navigation-items">
                <h1 class="trn">Index</h1>
                <h1 class="trn">Profil</h1>
                <h1 class="trn">Messages</h1>
            </nav>
        </div>
